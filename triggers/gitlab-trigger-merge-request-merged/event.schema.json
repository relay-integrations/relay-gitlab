{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "url": {
        "type": "string",
        "description": "Merge request URL"
      },
      "branch": {
        "type": "string",
        "description": "Branch that the changes were merged into (destination for the PR)"
      },
      "repository": {
        "type": "string",
        "description": "Name of the repository as username/repo-name "
      },
      "repositoryURL": {
        "type": "string",
        "description": "URL to the repository on GitLab"
      },
      "repositoryGitURL": {
        "type": "string",
        "description": "URL to the repository as a git:// scheme"
      },
      "repositorySSHURL": {
        "type": "string",
        "description": "SSH-style URL (e.g. git@github.com:username/repo-name)"
      }
    },
    "required": [
      "url",
      "branch",
      "repository",
      "repositoryURL",
      "repositoryGitURL",
      "repositorySSHURL"
    ],
    "additionalProperties": false
  } 